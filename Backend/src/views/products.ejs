<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Stock Left</th> 
            <th scope="col">Expiry Date</th>
            <th scope="col">Category</th>
            <th scope="col">Minimum Stock</th>
            <th scope="col">Qr Code</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% prods.forEach(product=>{ %>
            <tr>
                <th>
                    <%= product.id %>
                </th>
                <td>
                    <%= product.name %>
                </td>
                <td>
                    <%= product.description %>
                </td>
                <td scope="col">
                    <%= product.price%>
                </td>
                <td>
                    <img src=<%=product.imageURL%> />
                </td>

                <td scope="col">
                    <%= product.stockLeft %>
                </td>
               
                <td scope="col">
                    <%= product.expiryDate %>
                </td>

                <td scope="col">
                    <%= product.categoryType %>
                </td>
                <td scope="col">
                    <%= product.thresholdQuantity %>
                </td>
                <td>
                    <img src=<%=product.qrCodeURL%> />
                </td>
                <td>
                    <a href="/update-product/<%= product.id %>" class="btn btn-warning">Update</a> 
                    <a href="/delete-product/<%= product.id %>" class="btn btn-danger">Delete</a> 
                    <!-- every update function is binded to its own product and its own product id at runtime -->
                </td>
            </tr>
            <% })%>
    </tbody>
</table>